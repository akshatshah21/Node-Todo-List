<br>
<div class="container white">
    <br>
    <h3 class="black-text center">Login</h3>
    <div class="container">
        <div class="row">
            <form autocomplete="off" action="/users/login" method="POST" class="col s6">

                <div class="input-field">
                    <input type="email" name="email" class="validate" required>
                    <label for="email">Email</label>
                </div>

                <div class="input-field">
                    <input type="password" name="password" required>
                    <label for="password">Password</label>
                </div>

                <button class="btn light-blue darken-3" type="submit">Login</button>
                <br>
                <br>
            </form>
            <div class="col s6 black-text">
                <h5>Other login options:</h5>
            </div>
        </div>
        <% if(typeof success_msg != 'undefined') { %>
        <div class="red-text">
            <p><%= success_msg %></p>
        </div>
        <% } %>
        <% if(typeof error_msg != 'undefined') { %>
        <div class="red-text">
            <p><%= error_msg %></p>
        </div>
        <% } %>
        <% if(typeof error != 'undefined') { %>
        <div class="red-text">
            <p><%= error %></p>
        </div>
        <% } %>
        <br>
    </div>
</div>